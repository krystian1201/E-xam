

@model ExamDomain.Model.ClosedQuestion


<h4>Answers</h4>
<hr/>

@*there should be just one validation summary for a form?*@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group" id="NumberOfAnswersDiv">
    
    @Html.LabelFor(m => m.NumberOfAnswers, htmlAttributes: new {@class = "control-label col-md-2"})

    <div class="col-md-10">
        @Html.EditorFor(m => m.NumberOfAnswers, new {htmlAttributes = new {@class = "form-control", id = "NumberOfAnswersTextBox"}})
        @Html.ValidationMessageFor(m => m.NumberOfAnswers, "", new {@class = "text-danger"})
    </div>
</div>


<div id="ClosedAnswersDiv">
</div>



