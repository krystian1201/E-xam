@using ExamDomain.Model
@model ExamDomain.Model.Question

@{
    ViewBag.Title = "Delete question";
}

<h2>Delete question</h2>

<h3>Are you sure you want to delete this question?</h3>

    @*<h4>Question</h4>*@
    <hr/>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeToRespond)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeToRespond)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Points)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Points)
        </dd>

    </dl>

    @if ((Model as ClosedQuestion) != null && ((ClosedQuestion)Model).AnswerChoices != null
        && ((ClosedQuestion)Model).AnswerChoices.Count != 0)
    {
        <table class="table">
            <tr>
                <th style="text-align: center">
                    @Html.Label("Answer")
                </th>
                <th>
                    @Html.Label("IsCorrect")
                </th>
            </tr>

            @Html.DisplayFor(q => ((ClosedQuestion)q).AnswerChoices)
        </table>
    }


@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-default"/> 
        </div>
    }


@Html.ActionLink("Back to List", "Index")
