@using ExamDomain.Model

@model ExamDomain.Model.Question

@{
    ViewBag.Title = "Question details";
}

<h2>Question details</h2>


<div>
    @*<h4>Question</h4>*@
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TimeToRespond)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeToRespond)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Points)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Points)
        </dd>
    </dl>


    @if ((Model as ClosedQuestion) != null && ((ClosedQuestion)Model).AnswerChoices != null
        && ((ClosedQuestion)Model).AnswerChoices.Count != 0)
    {
        <table class="table">
            <tr>
                <th style="text-align: center">
                    @Html.Label("Answer")
                </th>
                <th>
                    @Html.Label("IsCorrect")
                </th>
            </tr>

            @Html.DisplayFor(q => ((ClosedQuestion)q).AnswerChoices)
        </table>
    }


    @*@if((Model as ClosedQuestion) != null)
        {
            @Html.Partial("_ClosedAnswersDetailsPartial", ((ClosedQuestion) Model).AnswerChoices)

        }*@

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
