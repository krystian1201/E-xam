
@model IEnumerable<ExamDomain.Model.ClosedAnswer>
@*@model ExamDomain.Model.ClosedQuestion*@


@*@Html.HiddenFor(model => model.AnswerChoices.GetType()*@

<table class="table">

    <tr>
        <th>
            <div>
                @*@Html.DisplayNameFor(model => model.AnswerChoices.FirstOrDefault().AnswerText)*@
                @Html.DisplayNameFor(model => model.AnswerText)
            </div>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCorrect)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 20%">
                @Html.EditorFor(modelItem => item.AnswerText, new { @class = "form-control" })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.IsCorrect, new { @class = "form-control" })
            </td>

        </tr>
    }

</table>
