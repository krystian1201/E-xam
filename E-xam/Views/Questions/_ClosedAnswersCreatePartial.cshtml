@model ExamDomain.Model.ClosedAnswer

@*there should be just one validation summary for a form?*@
@*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@



@for (int i = 0; i < ViewBag.numberOfAnswers; i++)
{
    <div class="form-group">

        @Html.LabelFor(m => m.AnswerText, htmlAttributes: new { @class = "control-label col-md-2"})

        <div class="col-md-3">
            @Html.TextBoxFor(m => m.AnswerText, new { @class = "form-control" } )
        </div>


        @Html.LabelFor(m => m.IsCorrect, htmlAttributes: new { @class = "control-label" })

       
        @Html.CheckBoxFor(m => m.IsCorrect, new { htmlAttributes = new { @class = "form-control" } })

        @Html.ValidationMessageFor(m => m.AnswerText, "", new { @class = "text-danger" })

    </div>
}


