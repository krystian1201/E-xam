
@using Utils.HtmlHelpers
@model ExamDomain.Model.QuestionInExamViewModel


<tr class="question">

    @Html.HiddenFor(q => q.ID)
    @Html.HiddenFor(q => q.ExamID)


    <td style="width: 20%">
        @Html.DisplayFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
    </td>

    <td style="width: 20%">
        @Html.DisplayFor(model => model.TimeToRespond, new { htmlAttributes = new { @class = "form-control" } })
    </td>

    <td style="width: 20%">
        @Html.DisplayFor(model => model.Points, new { htmlAttributes = new { @class = "form-control" } })
    </td>

    <td style="width: 20%">
        @Html.DisplayFor(model => model.QuestionType, new { htmlAttributes = new { @class = "form-control" } })
    </td>
    

    <td style="width: 20%"></td>

</tr>
